<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd" >
<mapper namespace="com.fuzhou.server.mapper.ShowActorMapper">

    <!-- 1. 定义ResultMap：数据库字段 → ActorVO属性（字段名要和数据库一致） -->
    <resultMap id="ActorVOResultMap" type="com.fuzhou.pojo.vo.ShowVO$ActorVO">
        <!-- 数据库字段id → ActorVO的id属性 -->
        <result column="id" property="id"/>
        <!-- 数据库字段name → ActorVO的name属性 -->
        <result column="name" property="name"/>
        <result column="show_id" property="showId"/>
    </resultMap>

    <!-- 2. 修改select语句：resultType → resultMap，绑定上面的ResultMap -->
    <select id="selectActorsByShowIds" resultMap="ActorVOResultMap">
        SELECT
        sa.show_id,
        a.id,
        a.name,
        a.popularity
        FROM show_actor sa
        LEFT JOIN actor a ON sa.actor_id = a.id
        WHERE sa.show_id IN
        <foreach collection="showIds" item="showId" open="(" separator="," close=")">
            #{showId}
        </foreach>
        ORDER BY a.popularity DESC
    </select>
</mapper>
